<section class="row justify-content-md-center">
  <div class="col-12 bg-white p-4">
    <div class="d-flex justify-content-center">
      <%= image_tag avatar_path(current_user), width: 80, height: 80, class: "rounded-circle me-2", alt: "Profile image" %>
      <div class="">
        <h1 class="mb-0"><%= current_user.name %></h1>
        <%= link_to "Edit profile", edit_user_path(current_user), class: "btn btn-link ms-4 p-0 border-0" %>
      </div>
    </div>

    <div class="row mt-5">
      <div class="offset-1 col-10">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h1>User's Articles</h1>
          <%= link_to "New Article", "#", class: "btn btn-primary" %>
        </div>
          You have not published articles at this time
      </div>
    </div>
  </div>
</section>